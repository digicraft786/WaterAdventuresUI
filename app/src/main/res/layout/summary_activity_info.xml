<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="3dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:background="#FFFFFF"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingLeft="0dp"
        android:id="@+id/product_name"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:text="Seabob Rental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:id="@+id/product_location"
        android:textAlignment="center"
        android:paddingTop="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/product_name"
        android:text="Bahia Principle Akumal"
        android:drawableLeft="@drawable/ic_location_on_grey_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/product_participants"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Participants : 1 Pax"
        android:layout_below="@+id/product_location"
        android:drawableLeft="@drawable/ic_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/product_duration"
        android:textSize="16dp"
        android:layout_below="@+id/product_participants"
        android:drawableLeft="@drawable/ic_time"
        android:text=" Duration : 120 min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="3dp"
        android:textSize="16dp"
        android:layout_below="@+id/product_duration"
        android:drawableLeft="@drawable/ic_date_range_new_24dp"
        android:text="08/30/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/summary_time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:textSize="16dp"
        android:layout_below="@+id/product_duration"
        android:drawableLeft="@drawable/ic_time_up"
        android:text="Time : 9 : 30 am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/cover"
        android:layout_alignParentRight="true"
        android:layout_above="@id/summary_time"
        android:layout_width="140dp"
        android:layout_height="90dp" />

</RelativeLayout>

</android.support.v7.widget.CardView>