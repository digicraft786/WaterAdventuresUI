<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MassiveCancelation.MassiveCancelationActivity"
    tools:showIn="@layout/activity_massive_cancelation">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A5A5A5"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point Of Activity"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/white_border"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="Bahia Principle"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point Of Sale"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/white_border"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="Bahia Principle Akumal"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="on"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="08/30/2018"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_round_btn"
            android:text="Search"
            android:textColor="#FFFFFF" />


    </LinearLayout>
        <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Water Activity"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Start Time"
            android:layout_weight="0.22"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Duration"
            android:layout_weight="0.18"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Pax"
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Tour Minimum"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <ListView
        android:id="@+id/massive_cancelation_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_marginRight="5dp"
            android:background="@drawable/cancel_round_btn"
            android:textColor="#FFFFFF"
            android:text="Cancel"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/save_round_btn"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>