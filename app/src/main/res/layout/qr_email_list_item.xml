<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="3dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/result_img"
        android:scaleType="centerCrop"
        android:src="@drawable/cover"
        android:layout_width="130dp"
        android:layout_height="100dp" />

    <TextView
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:id="@+id/item_ref_number"
        android:layout_toRightOf="@+id/result_img"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_scanner"
        android:text=" PAKHABB2019874CER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/item_activity"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/result_img"
        android:layout_below="@+id/item_ref_number"
        android:text="Sacoba Rental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/item_location"
        android:paddingTop="3dp"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/ic_location_on_grey_24dp"
        android:layout_toRightOf="@id/result_img"
        android:layout_below="@id/item_activity"
        android:text="Location : bahia Akumal Principle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/date_data"
        android:layout_toRightOf="@+id/result_img"
        android:layout_below="@+id/item_location"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="13dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_date_range_new_24dp"
            android:text="28/09/2009"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_time"
            android:text=" 9:30 am"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/result_img"
        android:layout_below="@+id/date_data"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="13dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_time_up"
            android:text=" 120 mins"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_user"
            android:text="1 pax"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>