<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ExtraOrdCancellation.ExtraOrdinaryActivity"
    tools:showIn="@layout/activity_extra_ordinary">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <TextView
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Choose the Participant it will applied to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/extra_ordinary_cond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_marginRight="5dp"
            android:background="@drawable/cancel_round_btn"
            android:textColor="#FFFFFF"
            android:text="Cancel"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/save_round_btn"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>