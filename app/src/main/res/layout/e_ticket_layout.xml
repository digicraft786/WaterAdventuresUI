<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:elevation="10dp"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:elevation="10dp">


            <TextView
                android:id="@+id/activity_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Activity : Seabob Rental"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />


            <LinearLayout
                android:id="@+id/reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_name"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation made to:"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mustajab Akram"
                    android:textSize="12dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/info_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation"
                android:background="#F6F6F6"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on_grey_24dp"
                    android:text="Bahia Princpi Akumal"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.43"
                        android:drawableLeft="@drawable/ic_date_range_grey_24dp"
                        android:text="25/08/2019"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:drawableLeft="@drawable/ic_time"
                        android:text=" 9 : 30 am "
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:drawableLeft="@drawable/ic_time_up"
                        android:text=" 120 min"
                        android:textSize="12dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ic_user"
                    android:text="Partcipant : 1 pax"
                    android:textSize="12dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_details"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/info_img"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover" />

                <TextView
                    android:id="@+id/info_desc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/info_img"
                    android:paddingLeft="10dp"
                    android:text="Activity Description"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_desc_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_desc_title"
                    android:layout_toRightOf="@+id/info_img"
                    android:ellipsize="marquee"
                    android:maxLines="5"
                    android:paddingLeft="10dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/info_desc_detail"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Powered By"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail"
                android:background="#F5F5F5"
                android:padding="8dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/qr_img"
                    android:paddingLeft="10dp"
                    android:paddingRight="8dp"
                    android:text="Activity/Tour Operator Please! Scanner this
            Qr code or use this Code : PKHABB2345780q4"
                    android:textColor="@color/grey"
                    android:textSize="10dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/qr_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/qr" />


            </RelativeLayout>


            <ImageView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/scuba_logo" />


        </RelativeLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.4"
                android:background="@drawable/background_round_btn"

                android:id="@+id/modifyReservation"

                android:text="Modify Reservation"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <TextView
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/background_round_btn"
                android:layout_marginRight="3dp"

                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Available Equipment"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/background_round_btn"
                android:layout_marginRight="3dp"

                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Start Activity"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>