<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="23dp"
            android:textColor="@color/colorAccent"
            android:text="Find A Reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:text="For a specific Reservation."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawableLeft="@drawable/ic_scanner_grey"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text=" Reservation Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/grey"
        android:paddingLeft="10dp"
        android:background="@drawable/search_et"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <TextView
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:text="For a list of customer's reservations."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawableLeft="@drawable/ic_message"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:text=" Customer Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/grey"
        android:paddingLeft="10dp"
        android:background="@drawable/search_et"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="30dp" />



    <Button
        android:layout_marginBottom="10dp"
        android:background="@drawable/filter_btn"
        android:layout_marginTop="10dp"
        android:text="Refine Search"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="30dp" />



</LinearLayout>