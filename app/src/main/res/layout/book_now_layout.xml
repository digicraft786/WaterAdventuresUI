<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="#F4F0F4"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:background="#D5D5D5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:text="Choose a starting time."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_navigate_next_blue_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:id="@+id/prevBtn"
                android:src="@drawable/ic_navigate_before_blue_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/slider_RV"
                android:layout_toRightOf="@id/prevBtn"
                android:layout_toLeftOf="@id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



        </RelativeLayout>

    </LinearLayout>


    <Button
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="16dp"
        android:layout_margin="3dp"
        android:id="@+id/bookNow"
        android:background="@drawable/sales_btn"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:text="Book Now"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

</LinearLayout>