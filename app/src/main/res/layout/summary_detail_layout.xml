<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="3dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:padding="8dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/checkout_lbl"
        android:textStyle="bold"
        android:text="Check Out Review:"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:id="@+id/perTicket_TextView"
        android:text="Per Ticket       $142.50"
        android:layout_below="@id/checkout_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:id="@+id/tix"
        android:text="X                       1 tix"
        android:layout_below="@id/perTicket_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/discounts"
        android:textSize="16dp"
        android:textColor="#087ABD"
        android:text="Discounts       $- 0.00"
        android:layout_below="@+id/tix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/discounts"
        android:background="#A5A5A5"
        android:layout_width="80dp"
        android:layout_height="2dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_below="@+id/divider"
        android:text="Total                $142.50"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


   <LinearLayout
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:orientation="vertical"
       android:layout_width="150dp"
       android:layout_height="wrap_content">

       <TextView
           android:textSize="15dp"
           android:textColor="@color/colorAccent"
           android:textStyle="bold"
           android:text="Have a Promo Code?"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />


       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="25dp">


           <EditText
               android:paddingLeft="10dp"
               android:background="@drawable/promo_et"
               android:layout_weight="0.8"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

           <ImageButton
               android:layout_weight="0.2"
               android:background="@android:color/transparent"
               android:src="@drawable/ic_add_black_24dp"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />


       </LinearLayout>

   </LinearLayout>



</RelativeLayout>

</android.support.v7.widget.CardView>